@using GeneralLabSolutions.Domain.Enums
@using VelzonModerna.ViewModels
@model CategoriaProdutoViewModel

@{
    ViewData["Title"] = "Adicionar Categoria";
}

 <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"> <strong>Nova Categoria </strong></h4>
            </div><!-- end card header -->

            <div style="padding: 20px;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                     <partial name="_edit_e_create" model="Model" /> 

                    <hr />
                    <div>
                        <input type="submit" value="Adicionar" class="btn btn-outline-info" />
                        <a asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>

    <script src="~/assets/js/app.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  
