@using GeneralLabSolutions.Domain.Enums
@using VelzonModerna.ViewModels
@model CategoriaProdutoViewModel

@{
    ViewData ["Title"] = "Exclusão de categoria";
}



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">
                    <strong>
                        Categoria >> Tem certeza que deseja excluir esta
                        Categoria?
                    </strong>
                </h4>
            </div><!-- end card header -->

            <div style="padding: 20px;">
                <div>

                    <partial name="_details_e_delete" model="Model" />
                    <hr>
                    <form asp-action="Delete">

                        <div>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="SIM" class="btn btn-outline-danger" />
                            <a asp-action="Index" class="btn btn-outline-info">Cancelar</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>

    <script src="~/assets/js/app.js"></script>
}
