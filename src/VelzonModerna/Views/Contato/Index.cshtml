@using VelzonModerna.ViewModels
@model IEnumerable<ContatoViewModel>

@{
    ViewBag.Title = "Lista de Contato";
    ViewBag.pTitle = "Lista de Contato";
    ViewBag.pageTitle = "Contato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {
    <partial name="partialcooperchip/_cssindex" />
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <a asp-action="Create" class="btn btn-primary">+ Adicionar Contato</a>
                </h5>
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 10px;">
                                <div class="form-check">
                                    <input class="form-check-input fs-15" type="checkbox" id="checkAll" value="option">
                                </div>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAlternativo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TelefoneAlternativo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Observacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoDeContato)
                            </th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <th scope="row">
                                    <div class="form-check">
                                        <input class="form-check-input fs-15" type="checkbox" name="checkAll" value="option1">
                                    </div>
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailAlternativo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TelefoneAlternativo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoDeContato)
                                </td>
                                <td>
                                    <div class="dropdown d-inline-block">
                                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="ri-eye-fill align-bottom me-2 text-muted"></i> Detalhes</a></li>
                                            <li><a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item edit-item-btn"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Editar</a></li>
                                            <li>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item remove-item-btn">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Excluir
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts {


    <partial name="partialcooperchip/_scripts_datatables" />

    <script src="~/assets/js/pages/datatables.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}
