@using VelzonModerna.ViewModels
@model CreateEditAgendaEventoViewModel

<div class="modal fade default-example-modal-right-lg" id="envetModalLgDetails" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-right modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title"><span class="title-modal-detail">Detalhes do Evento</span></h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body detail-fullcalendar">
                <table class="table">
                    <thead style="background-color: black; color: white;">
                        <tr>
                            <th scope="col">Propriedade</th>
                            <th scope="col">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Título</td>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <td>Data Inicial</td>
                            <td>@Model.Start.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td>Data Final</td>
                            <td>@(Model.End.HasValue ? Model.End.Value.ToString("dd/MM/yyyy HH:mm") : "Não definido")</td>
                        </tr>
                        <tr>
                            <td>Participante</td>
                            <td>@Model.NomeParticipante</td>
                        </tr>
                        <tr>
                            <td>Descrição</td>
                            <td>@Model.Description</td>
                        </tr>
                    </tbody>
                </table>

            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-danger delete-event-btn" data-id="@Model.Id">Excluir</button>
            </div>

        </div>
    </div>
</div>