@model List<GeneralLabSolutions.Identidade.Dtos.UserDto>

<h2>Gerenciar Usuários na Role</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.NomeCompleto</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<h3>Adicionar Usuário à Role</h3>

<form asp-action="AddUserToRole" method="post">
    <div class="form-group">
        <label>ID do Usuário</label>
        <input name="UserId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Nome da Role</label>
        <input name="RoleName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
