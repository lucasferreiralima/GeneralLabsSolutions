@model GeneralLabSolutions.Domain.Entities.Produto

@{
    ViewBag.Title = "Detalhes de Protudo";
    ViewBag.pTitle = "Detalhes de Produto";
    ViewBag.pageTitle = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"> <strong>Produto >> @Model.Descricao.ToUpper() </strong></h4>
            </div><!-- end card header -->

            <div style="padding: 20px;">
                <div>

                <partial name="_details_e_delete" model="Model" />

                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@Model?.Id">Editar</a>
    <a asp-action="Index" class="btn btn-outline-warning">Listagem</a>
</div>

@section scripts{
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>

    <script src="~/assets/js/app.js"></script>
}
