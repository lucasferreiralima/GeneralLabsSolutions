@using GeneralLabSolutions.Domain.Enums
@model GeneralLabSolutions.Domain.Entities.Produto

<div class="form-group">
    <label asp-for="Codigo" class="control-label"></label>
    <input asp-for="Codigo" class="form-control" placeholder="Digite o Código..."/>
    <span asp-validation-for="Codigo" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Descricao" class="control-label"></label>
    <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição..."/>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Ncm" class="control-label"></label>
    <input asp-for="Ncm" class="form-control" placeholder="Informe o NCM..."/>
    <span asp-validation-for="Ncm" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Valor Unitário</label>
    <input asp-for="ValorUnitario" class="form-control"  placeholder="Digite o valor unitário..."/>
    <span asp-validation-for="ValorUnitario" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Status do Produto</label>
    <select asp-for="StatusDoProduto" class="form-control" asp-items="Html.GetEnumSelectList<StatusDoProduto>()">
        <option value="">Selecione...</option>
    </select>
    <span asp-validation-for="StatusDoProduto" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Categoria</label>
    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
        <option value="">Selecione...</option>
    </select>
    <span asp-validation-for="CategoriaId" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Fornecedor</label>
    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId">
        <option value="">Selecione...</option>
    </select>
    <span asp-validation-for="FornecedorId" class="text-danger"></span>
</div>